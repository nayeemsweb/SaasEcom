@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html class="no-js" lang="" style="background: #5864ff;">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>@ViewData["Title"]</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon"
          type="image/x-icon"
          href="~/LandingSite/assets/img/favicon.png" />
    <!-- Place favicon.ico in the root directory -->
    <!-- ======== CSS here ======== -->
    <link rel="stylesheet" href="~/LandingSite/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/LandingSite/assets/css/lineicons.css" />
    <link rel="stylesheet" href="~/LandingSite/assets/css/animate.css" />
    <link rel="stylesheet" href="~/LandingSite/assets/css/main.css" />
</head>
<body>
    <!-- ======== preloader start ======== -->
    <div class="preloader">
        <div class="loader">
            <div class="spinner">
                <div class="spinner-container">
                    <div class="spinner-rotator">
                        <div class="spinner-left">
                            <div class="spinner-circle"></div>
                        </div>
                        <div class="spinner-right">
                            <div class="spinner-circle"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- preloader end -->

    <section id="login_register_form">
        <div class="form_box">
            <form id="registerForm" asp-action="Register" asp-controller="Account" asp-area="" asp-antiforgery="true"
                  asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="mt-5 mb-5 text-center">@ViewData["Title"] Here</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="d-flex">
                    <div class="form-floating pe-1">
                        <input asp-for="FirstName" class="form-control" autocomplete="First name" aria-required="true" />
                        <label asp-for="FirstName"></label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-floating ps-1">
                        <input asp-for="LastName" class="form-control" autocomplete="Last name" aria-required="true" />
                        <label asp-for="LastName"></label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="ConfirmPassword"></label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="StoreId" id="StoreId" name="StoreId" value="@Model.StoreId" aria-required="true">

                <div class="col text-center mt-3">
                    <button id="registerSubmit" type="submit" class="main-btn btn-hover">Submit</button>
                </div>
                
            </form>
            <div>
                <p class="mt-4 text-center">
                        <a asp-area="" asp-action="Register" asp-controller="Account" asp-route-returnUrl="@Model.ReturnUrl">
                            <i class="lni lni-user pe-2"></i>
                            Already have an account? Login Now!
                        </a>
                    </p>
                <p class="mt-3 mb-5 text-center">
                        <a asp-area="" asp-action="Index" asp-controller="Home" asp-route-returnUrl="@Model.ReturnUrl">
                            <i class="lni lni-arrow-left pe-2"></i>
                            Go Back
                        </a>
                    </p>
            </div>

            @*<div class="col-md-6 col-md-offset-2">
                <section>
                <h3>Use another service to register.</h3>
                <hr />
                @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
