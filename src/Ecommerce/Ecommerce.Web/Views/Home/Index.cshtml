    <!-- ======== subscribe-section start ======== -->
    <section id="contact" class="subscribe-section pt-120">
        <div class="container">
            <div class="subscribe-wrapper img-bg">
                <div class="row align-items-center">
                    <div class="col-xl-6 col-lg-7">
                        <div class="section-title mb-15">
                            <h2 class="text-white mb-25">Subscribe Our Newsletter</h2>
                            <p class="text-white pr-5">
                                Get our latest News and Updates
                                at your finger tips!
                            </p>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-5">
                        <form action="#" class="subscribe-form">
                            <input type="email"
                                   name="subs-email"
                                   id="subs-email"
                                   placeholder="Your Email" />
                            <button type="submit" class="main-btn btn-hover">
                                Subscribe
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Newsletter section Ends-->

            <div class="message-box-header pt-100 mb-3 d-flex align-items-center">
                <div class="icon">
                    <i class="lni lni-envelope contact-icon"></i>
                </div>
                <h2 class="contact-title">Have Any Query?</h2>
            </div>
            <div class="message-box-body">
                <form role="form" asp-area="" asp-controller="" asp-action="" method="post" asp-antiforgery="true">
                    <div class="form-group d-flex">
                        <div class="mb-3 col-md-6 pe-3">
                            <label for="name" class="form-label"><strong>Enter Your Name</strong></label>
                            <input type="text" class="form-control" id="name" placeholder="Full Name">
                        </div>

                        <div class="mb-3 col-md-6 ps-3">
                            <label for="email" class="form-label"><strong>Enter Your E-mail</strong></label>
                            <input type="email" class="form-control" id="email" placeholder="E-mail">
                        </div>
                    </div>
                    <div class="mb-3 col-md-12 mt-3">
                        <label for="name" class="form-label"><strong>Subject</strong></label>
                        <input type="text" class="form-control" id="name" placeholder="Subject of your message">
                    </div>
                    <div class="mb-3 mt-45">
                        <label for="msg-textarea" class="form-label"><strong>Your Message</strong></label>
                        <textarea class="form-control" id="msg-textarea" rows="3" placeholder="Write your message here . . ."></textarea>
                    </div>
                    <button type="submit" class="main-btn btn-hover border-btn">Submit</button>
                </form>
            </div>
            <!-- Message Box section Ends-->
        </div>
    </section>
