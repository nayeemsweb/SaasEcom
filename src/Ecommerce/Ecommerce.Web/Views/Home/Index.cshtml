            </div>
            <!-- container -->
        </div>
        <!-- navbar area -->
    </header>
    <!-- ======== header end ======== -->
    <!-- ======== hero-section start ======== -->
    <section id="home" class="hero-section">
        <div class="container">
            <div class="row align-items-center position-relative">
                <div class="col-lg-6">
                    <div class="hero-content">
                        <h1 class="wow fadeInUp" data-wow-delay=".4s">
                            Welcome To<br/>
                            Ecom.io 
                        </h1>
                        <p class="wow fadeInUp" data-wow-delay=".6s">
                            Committed to People, Committed to the future. 
                            Saas Solutions for your Business Grow on time.
                        </p>
                        <a asp-area="" asp-controller="Account" asp-action="Register"
                           class="main-btn border-btn btn-hover wow fadeInUp"
                           data-wow-delay=".6s">Explore Now</a>
                        <a href="#features" class="scroll-bottom">
                            <i class="lni lni-arrow-down"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="hero-img wow fadeInUp" data-wow-delay=".5s">
                        <img src="~/LandingSite/assets/img/hero/hero-img.png" alt="" />
                    </div>
