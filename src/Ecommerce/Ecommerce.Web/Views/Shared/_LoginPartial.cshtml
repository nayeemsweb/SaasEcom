@using Microsoft.AspNetCore.Identity
@using Ecommerce.Membership.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Setup" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="">
        <form  class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout" 
        asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="navbarCustomButton">
                <i class="lni lni-exit pe-2"></i>
                Logout
            </button>
        </form>
    </li>
}
else
{
    <li class="">
        <a class="navbarCustomButton" asp-area="" asp-controller="Account" asp-action="Login">
            <i class="lni lni-user pe-2"></i>
            Login
        </a>
    </li>
    <li class="">
        <a class="navbarCustomButton" asp-area="" asp-controller="Account" asp-action="Register">
            <i class="lni lni-grid-alt pe-2"></i>
            Register
        </a>
    </li>
}
</ul>
