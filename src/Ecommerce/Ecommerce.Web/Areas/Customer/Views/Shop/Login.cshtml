@model Ecommerce.Web.Areas.Customer.Models.ShopAccountModels.LoginModel
@{
    ViewData["Title"] = "Login";
}


<!-- Contact Form Begin -->
<div class="contact-form spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="contact__form__title">
                    <h2>Login</h2>
                </div>
            </div>
        </div>
        <form asp-area="Customer" asp-controller="Shop" asp-action="Login" class="ogani_registerForm" id="account" method="post">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="offset-md-3 col-md-6 d-block">
                    <input asp-for="Email" type="email" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <input asp-for="Password" type="password" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <input type="hidden" asp-for="StoreId" id="StoreId" name="StoreId" value="@Model.StoreId" aria-required="true">
                    <div class="col-md-12 text-center">
                        <button id="login-submit" type="submit" class="site-btn">Submit</button>
                    </div>
                    
                    
                    <div class="d-flex justify-content-between my-5">
                        <a class="forgot_password" asp-area="Customer" asp-controller="Shop" asp-action="Register" 
                        asp-route-returnUrl="@Model.ReturnUrl"><i class="fa fa-user-plus pr-1" aria-hidden="true"></i>
                            Don't have an account? Register Now!                            
                        </a>
                        <a id="forgot-password" asp-area="Customer" asp-controller="Shop" asp-action="ForgotPassword" 
                        class="forgot_password">Forgot Password 
                            <i class="fa fa-long-arrow-right pl-1" aria-hidden="true"></i>
                        </a>                        
                    </div>
                </div>
                
            </div>
        </form>
    </div>
</div>
<!-- Contact Form End -->

