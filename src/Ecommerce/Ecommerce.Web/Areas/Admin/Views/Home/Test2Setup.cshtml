
@{
    ViewData["Title"] = "Test2Setup";
}
@section Styles{
   <!-- Required meta tags -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="~/AdminLTE/SetupWizard/styles/css/main.css">

    <link href="~/lib/font-awesome/css/all.css">

    <!-- dropzonejs -->
    <link rel="stylesheet" href="https://unpkg.com/dropzone@5/dist/min/dropzone.min.css" type="text/css" />

}
    <main class="container mt-5 pt-5">

        <form class="wizard" method="post" enctype="multipart/form-data">
            <aside class="wizard-content container">

                <div class="wizard-step">
                    
                    <div class="mb-5 w-50 mx-auto">
                        <h3 class="text-center">Set basic info to start</h3>
                        <p class="text-center">This will be viewed to customer.
                            <br />
                         You can always change this later.</p>
                    </div>
                    <div class="form-group">
                        <label for="aboutOperatingIndustryInfo">Which industry will you be operating in?</label>
                        <select class="form-control" name="action" required>
                            <option selected disabled  value="">Please choose one ...</option>
                            <option value="0">Beauty</option>
                            <option value="1">Clothing</option>
                            <option value="2">Electronics</option>
                            <option value="3">Furniture</option>
                            <option value="4">Handcrafts</option>
                            <option value="5">Jewelry</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="StoreName">Store Name</label>
                        <input type="text" name="body" class="form-control required banner-info" id="StoreName"
                            placeholder="Sultan dine">
                    </div>
                    <div class="form-group">
                        <label for="StoreTitle">Store Title</label>
                        <input type="text" name="body" class="form-control required banner-info" id="StoreTitle"
                            placeholder="Good Food, Good Life.">
                    </div>

        <!--Image upload section-->
         <div class="card-body row justify-content-center">

                                <div id="storeIconImage" class="fallback dropzone col-xs-6 m-5">
                                    <input name="file" type="file" class="d-none" />
                                </div>
                                 <div id="storeCoverImage" class="fallback dropzone col-xs-6 m-5">
                                    <input name="file" type="file" class="d-none" />
                                </div>
         </div>
         <!--//Image upload section-->            
              
                  <label for="descShop">Describe about your shop</label>
                        <textarea name="description" class="form-control" id="descShop"></textarea>
                    </div> 

        <!-- /.row -->

        <div class="form-group">
               <div class="wizard-step">
                    <<div class="form-group mb-5 w-50 mx-auto">
                        <h3 class="text-center">Add your shop info</h3>
                        <p class="text-center">Virtual address of your shop will be here.
                            <br />
                         You can always change this later.</p>
                    </div>
                    
                    <div class="form-group">
                        <label for="shopUrl">Shop URL</label>
                        <input type="url" name="shopUrl" class="form-control" id="shopUrl"
                            placeholder="www.peranaichill.com">
                    </div>
                    <div class="form-group">
                        <label for="EmailAddress">Shop Email Address</label>
                        <input type="email" name="shopEmail" class="form-control" id="EmailAddress"
                            placeholder="mail@pernaichill.com" required>
                    </div>
                    <div class="row">
                        <div class="form-group col">
                        <label for="PhoneNumber">Phone Number</label>
                        <input type="tel" name="shopPhoneNumber" class="form-control" id="PhoneNumber"
                            placeholder="01711111112" required>
                        </div>
                        <div class="form-group col">
                        <label for="PhoneNumber">Phone Number</label>
                        <input type="tel" name="shopPhoneNumber" class="form-control" id="PhoneNumber"
                            placeholder="01711111113 (optional)">
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="form-group col">
                        <label for="socailPlatformAddress">Facebook Page Handle</label>
                        <input type="text" name="shopSocialPlatform" class="form-control" id="socailPlatformAddress"
                            placeholder="chill.pernai">
                        </div>
                        <div class="form-group col">
                        <label for="socailPlatformAddress">Instagram Handle</label>
                        <input type="text" name="shopSocialPlatform" class="form-control" id="socailPlatformAddress"
                            placeholder="chill.pernai">
                        </div>
                        
                    </div>
                </div>

                <div class="wizard-step">
                    <<div class="form-group mb-5 w-50 mx-auto">
                        <h3 class="text-center">Add your shop info</h3>
                        <p class="text-center">Local address of your shop will be here.
                            <br />
                         You can always change this later.</p>
                    </div>
                    <div class="form-group">
                        <label for="countryName">Country/region</label>
                        <select class="form-control" name="action" required>
                            <option selected disabled value="">Please choose one ...</option>
                            <option value="0">Bangladesh</option>
                            <option value="1">Pakisthan</option>
                            <option value="2">Nepal</option>
                            <option value="3">America</option>
                            <option value="4">Canada</option>
                            <option value="5">China</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="form-group col">
                        <label for="shopCity">City</label>
                        <select class="form-control" name="action" required>
                            <option selected disabled value="">Please choose one ...</option>
                            <option value="0">Dhaka</option>
                            <option value="1">Barishal</option>
                            <option value="2">New York</option>
                            <option value="3">Moscow</option>
                            <option value="4">Dubai</option>
                            <option value="5">Berlin</option>
                        </select>
                        </div>
                        <div class="form-group col">
                        <label for="shopPostalCode">Postal Code</label>
                        <input type="tel" name="postalCode" class="form-control" id="shopPostalCode" required
                            placeholder="1236">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="localAddressHouseNo">Apartment, suite, etc</label>
                        <input type="text" name="shopSocialPlatform" class="form-control" id="localAddressHouseNo"
                            required
                            placeholder="chill.pernai">
                        </div>
                    <div class="form-group">
                        <label for="localAddress">Detail Address</label>
                        <textarea name="address" class="form-control" id="localAddress"></textarea>
                    </div> 
                    
                    @*<div class="form-group w-50 mx-auto">
                        <h1>Title 4</h1>
                    </div>
                    <div class="form-group">
                        <label for="titleNoti">Action</label>
                        <textarea class="form-control required fetch-info">🍍</textarea>
                    </div>*@

                </div>

            </aside>
        </form>
    </main>



@section Scripts{
    <script src="~/AdminLTE/SetupWizard/src/wizard.js"></script>
    <script src="~/AdminLTE/SetupWizard/main.js"></script>
    

    <!-- dropzonejs -->
    <script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script>



      <script>
         
             Dropzone.autoDiscover = false;
               var myDropzoneIcon = new Dropzone("div#storeIconImage", {
                   dictDefaultMessage: "Drop store Icon here to upload",
                   url: "/Admin/Home/ImageUploader",
                   maxFiles: 1,
                   addRemoveLinks: true,
                   init: function() {
                        //will be impliment later
                        this.on('maxfilesreached', function(){
                            this.removeEventListeners();
                        });
                        
                   },
                   success(file, message) {
                       if(message.code == 200)
                       {
                           file.uploadedUrl = message.path;
                           $("#ImageUrl").val(message.path);
                       }
                    },
            
                    removedfile: function(file) {
                         $.ajax({
                         type: 'POST',
                         url: '/Admin/Image/DeleteImage',
                         data: {url: file.uploadedUrl},
                         sucess: function(data){
                           console.log('success: ' + data); }
                    });

                     var _ref;
              
                     return (_ref = file.previewElement) != null ? _ref.parentNode.removeChild(file.previewElement) : void 0;
               }
            });
            
             var myDropzoneCover = new Dropzone("div#storeCoverImage", {
                   dictDefaultMessage: "Drop store Cover here to upload",
                   url: "/Admin/Home/ImageUploader",
                   maxFiles: 1,
                   addRemoveLinks: true,
                   init: function() {
                        //will be impliment later
                        this.on('maxfilesreached', function(){
                            this.removeEventListeners();
                        });
                   },
                   success(file, message) {
                       if(message.code == 200)
                       {
                           file.uploadedUrl = message.path;
                           $("#ImageUrl").val(message.path);
                       }
                    },
            
                    removedfile: function(file) {
                         $.ajax({
                         type: 'POST',
                         url: '/Admin/Image/DeleteImage',
                         data: {url: file.uploadedUrl},
                         sucess: function(data){
                           console.log('success: ' + data); }
                    });

                     var _ref;
              
                     return (_ref = file.previewElement) != null ? _ref.parentNode.removeChild(file.previewElement) : void 0;
               }
            });
      </script>
   

}

